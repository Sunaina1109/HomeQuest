<% layout("/layouts/boilerplate") %>
    <h2 class="listing-detail">Listing Details :</h2>

      <div class="card col-6 offset-3 show-card">
        <img 
        src= "<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"/>

        <div class="row mt-3">
          <div class="col-8">
           <h3><%= listing.title %></h3>
          </div>
   
        <div class="card-body">
          <p class="card-text">
            <%= listing.description %>  <br />

            &#8377; <%= listing.price.toLocaleString("en-IN") %>  <br />

            <%= listing.location %>  <br />
            
            <%= listing.country %>
          </p>
        </div>
     </div>

     <br/>

     <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" 
        class="btn btn-dark edit-btn">Edit Listing</a>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      
          <button class="btn btn-dark offset-5">Delete</button>
        </form>
     </div>
    <br>
     <div class="col-8">
      <h4 class="rating">Rating & Comment</h4><br>
      <form>
        <div>
          <label for="rating">Rating</label>
          <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-label">
        </div>
        <br>
        <div>
          <label for="comment"  class="form-label"></label>
          <textarea placeholder="write a comment"  name="review[comment]" id="comment" row="10" col="30" class="form-control"></textarea> 
        </div>
        <button >submit</button>
      </form>
     </div>
  </div>
